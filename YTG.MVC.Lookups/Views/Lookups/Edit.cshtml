@using YTG.MVC.Lookups.Models
@model LuCategoryModel

@{
    ViewData["Title"] = "Edit";
}

<div class="float-right">
    <a asp-action="Index">Back to Category List</a>
</div>
<h3>Category</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Lookups">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label asp-for="Name" class="control-label" title="Id: @Model.Id"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="float-right">
                    <input type="submit" name="submitButton" value="Save Category" class="btn btn-primary" />
                </div>
                <label asp-for="IsActive" class="control-label"></label>
                <input type="checkbox" asp-for="IsActive" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            @if (Model.Id > 0)
            {
                <hr />
                <fieldset>
                    <legend><b>Category Items</b></legend>
                    <div id="gridPartial">
                        @{ await Html.RenderPartialAsync("_ItemsDisplay", Model.Items); }
                    </div>
                </fieldset>
            }
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Back to Category List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
